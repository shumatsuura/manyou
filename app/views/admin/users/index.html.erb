<div class ="container">
  <%= link_to t('view.create_new_user'), new_admin_user_path %>
  <table class="table">
    <tr>
      <th><%= t('view.user_name') %></th>
      <th><%= t('view.user_email') %></th>
      <th><%= t('view.tasks_count') %></th>
      <th><%= t('view.user_admin') %></th>
      <th><%= t('view.created_at') %></th>
      <th><%= t('view.updated_at') %></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td class="user_name_row"><%= link_to "#{user.name}", admin_user_path(user.id) %></td>
        <td class="user_email_row"><%= user.email %></td>
        <td class="user_tasks_count_row">
          <% if user.tasks %>
            <%= user.tasks.count %>
          <% end %>
        </td>
        <td class="user_admin_row"><%= user.admin %></td>
        <td class="user_created_at_row"><%= user.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        <td class="user_updated_at_row"><%= user.updated_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        <td class="user_edit_row"><%= link_to t('view.edit'), edit_admin_user_path(user.id) %></td>
      </tr>
    <% end %>

  </table>
  <%= paginate @users %>
</div>
